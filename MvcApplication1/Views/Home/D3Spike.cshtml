@{
    ViewBag.Title = "D3Spike";
}

<h2>D3Spike</h2>

<div class="chart1"></div>
<div class="chart2"></div>
<svg class="chart3"></svg>
<div class="chart4"></div>



<style>


</style>
@section Scripts {
    @Scripts.Render("~/bundles/d3Js")

    <script type="text/javascript">
        /*Chart 1*/
        var data = [5, 8, 15, 16, 23, 42];

        var x = d3.scale.linear()
            .domain([0, d3.max(data)])
            .range([0, 420]);

        d3.select(".chart1")
          .selectAll("div")
            .data(data)
          .enter().append("div")
            .style("width", function (d) { return x(d) + "px"; })
            .text(function (d) { return d; });

        /*Chart 2*/
        var data = [5, 8, 15, 16, 23, 42];

        var x = d3.scale.linear()
            .domain([0, d3.max(data)])
            .range([0, 420]);

        d3.select(".chart2")
          .selectAll("div")
            .data(data)
          .enter().append("div")
            .style("width", function (d) { return x(d) + "px"; })
            .text(function (d) { return d; });
        /* SVG Chart */
      
        var width = 420,
            barHeight = 20;

        var x = d3.scale.linear()
            .range([0, width]);

        var chart = d3.select(".chart3")
            .attr("width", width);

        d3.tsv("@Url.Content("~/Content/D3Data/data.tsv")", type, function (error, data) {
            x.domain([0, d3.max(data, function (d) { return d.value; })]);

            chart.attr("height", barHeight * data.length);

            var bar = chart.selectAll("g")
                .data(data)
              .enter().append("g")
                .attr("transform", function (d, i) { return "translate(0," + i * barHeight + ")"; });

            bar.append("rect")
                .attr("width", function (d) { return x(d.value); })
                .attr("height", barHeight - 1);

            bar.append("text")
                .attr("x", function (d) { return x(d.value) - 3; })
                .attr("y", barHeight / 2)
                .attr("dy", ".35em")
                .text(function (d) { return d.value; });
        });

        function type(d) {
            d.value = +d.value; // coerce to number
            return d;
        }

    </script>
}

@section Styles {
    <link href="@Url.Content("~/Content/Chart.css")" rel="stylesheet" type="text/css" />
    
}

